<div{{ attributes }}>
  <header class="row">
    <div class="column small-12 large-5">{{ page.header_left }}</div>
    <div class="column hide-for-medium small-12 responsive-menu-button-wrap text-center" id="responsive-menu-button-wrap">
      <button class="menu-icon" type="button" data-toggle="responsive-navigation responsive-menu-button-wrap"></button>
    </div>
    <div class="column small-12 large-7 navigation-wrap" data-toggler="opened" id="responsive-navigation">{{ page.header_right }}</div>
    {# @todo: Restore the right side of the header when we reimplement the design. #}
    {#<div class="column small-6">{{ page.header_right }}</div>#}
  </header>

  <div class="zone-highlighted" id="zone-highlighted">
    <div class="row">
      <div class="columns small-push-1 small-10">
        {{ page.highlighted }}
      </div>
    </div>
  </div>

  <div class="content-full-width" id="content-full-width">
    {{ page.content_full }}
  </div>

  <main role="main" class="row">
    <div class="columns small-push-1 small-10">
      {{ page.info }}
      {{ page.content }}
    </div>
  </main>

  {% if page.footer %}
    <footer role="contentinfo" class="row">
      <div class="columns small-12">
        {{ page.footer }}
      </div>
    </footer>
  {% endif %}

</div>{# /.layout--layoutPage #}
