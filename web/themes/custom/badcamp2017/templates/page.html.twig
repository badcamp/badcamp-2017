<div class="layout--layoutPage">
  <header class="row">
    <div class="column small-12">{{ page.header_left }}</div>
    {# @todo: Restore the right side of the header when we reimplement the design. #}
    {#<div class="column small-6">{{ page.header_right }}</div>#}
  </header>

  <div class="row zone-highlighted" id="zone-highlighted">
    <div class="columns small-collapse">
      {{ page.highlighted }}
    </div>
  </div>

  <main role="main" class="row">
    <div class="columns small-push-1 small-10">
      {{ page.content }}
      {{ page.info }}
    </div>
  </main>

  {% if page.footer %}
    <footer role="contentinfo" class="row">
      <div class="columns small-12">
        {{ page.footer }}
      </div>
    </footer>
  {% endif %}

</div>{# /.layout--layoutPage #}
